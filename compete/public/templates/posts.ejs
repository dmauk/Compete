<div class="container mt-5">
  <div class="row mx-auto w-75">
    <div class="col-lg">
	    <div class="mt-3 card bg-dark text-white">
		  <div class="row no-gutters">
			<div class="col-auto border-info border-right">
			  <img src="http://via.placeholder.com/150x150" class="img-fluid" alt="">
			</div>
			<div class="col">
			  <div class="card-block px-2 pt-3">
			    <h4 ng-show="post.link" class="card-title text-center"><a class="text-info" href="{{post.link}}">{{post.title}}</a></h4>
				<h4 ng-hide="post.link" class="card-title text-center">{{post.title}}</h4>
				<p class="d-flex justify-content-center card-text" ng-show="post.description">{{post.description}}</p>
				<div ng-show="isLoggedIn()" class="d-flex justify-content-center row">
				  <div class="col-6 text-right self-align-center">
				    <h3 class="font-weight-bold">{{post.upvotes}}</h3>
				  </div>
				  <div class="col-6 text-left">
				    <a ng-click="incrementUpvotes(post)" class="btn btn-outline-success">LIKE</a>
				  </div>
				</div>
                <div ng-hide="isLoggedIn()" class="d-flex justify-content-center row">
				  <div class="col-12 text-center self-align-center">
				    <h3 class="font-weight-bold">{{post.upvotes}}</h3>
				  </div>
				</div>
			  </div>
			</div>
		  </div>
		  <div class="card-footer border-top border-info w-100 text-muted">
		    <div class="row">
		      <div class="col-9 text-left">
			    Posted By: <a class="text-info" href="/#/profile/{{post.author}}">{{post.author}}</a>
			  </div>
			</div>
		  </div>
		</div>
	</div>
  </div>
  <div class="row mx-auto w-50">
    <div class="col-lg">
	  <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
	    <div class="mt-3 card bg-secondary text-white">
		  <div class="row no-gutters">
			<div class="col">
			  <div class="card-block">
			    <div class="row m-0 w-100">
				  <div class="col-3 no-gutters bg-dark border-right border-info">
				    <div ng-show="isLoggedIn()" class="row py-3 w-100">
				      <div class="col-6 text-right self-align-center">
				        <h3 class="font-weight-bold">{{comment.upvotes}}</h3>
					  </div>
                      <div class="col-6 text-left">
				        <a ng-click="incrementUpvotes(comment)" class="btn btn-outline-success">LIKE</a>
				      </div>
					</div>
                    <div ng-hide="isLoggedIn()" class="row py-3 w-100">
				      <div class="col-12 text-center self-align-center">
				        <h3 class="font-weight-bold">{{comment.upvotes}}</h3>
					  </div>
					</div>

				  </div>
                  <div class="col-9 align-self-center">
                    <p class="d-flex justify-content-center card-text" ng-show="comment.body">{{comment.body}}</p>
				  </div>
				</div>
			  </div>
			</div>
		  </div>
		  <div class="card-footer border-top border-info w-100">
		    <div class="row">
		      <div class="col-9 text-left">
			    Posted By: <a class="text-info" href="/#/profile/{{comment.author}}">{{comment.author}}</a>
			  </div>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </div>

<div class="row text-center">
  <div class="col">
    <div class="mx-auto w-50">
      <hr class="mt-5"></hr>
      <form ng-submit="addComment()" ng-show="isLoggedIn()" style="margin-top:30px;">
        <h3>Add a comment</h3>
  
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Comment" ng-model="body"></input>
        </div>

        <button type="submit" class="btn btn-info">Post</button>
      </form>
  
      <div class="alert alert-warning" role="alert" ng-hide="isLoggedIn()">
        You need to <a class="text-info" href="/#/login">Log In</a> or <a class="text-info" href="/#/register">Register</a> before you can add a comment.
      </div>
    </div>
  </div>
</div>
